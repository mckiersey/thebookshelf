        text-align: center;
        font-size: 18px;
    }
    #enterButton {
        margin: 10px;
        background-color: steelblue !important;
        font-size: 30px;
    }
    #createButton {
        margin: 10px;
        font-size: 15px;
    }

    #mainImage{
        margin: 30px;
    }
